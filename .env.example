# Clerk Configuration (Required)
# Get these from https://dashboard.clerk.com -> API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-secret-key-here

# Clerk Pages Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Clerk Webhook (Optional - for automatic welcome credits)
# Get this from Clerk Dashboard -> Webhooks -> Signing Secret
CLERK_WEBHOOK_SECRET=whsec_your-clerk-webhook-secret

# App Configuration
NODE_ENV=development

# Redis Configuration (for API Gateway and Queuing)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Gateway Configuration
GATEWAY_ENABLED=true
MAX_QUEUE_SIZE=1000
REQUEST_TIMEOUT=30000